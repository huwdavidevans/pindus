!!! 5
%html{ :lang => "en"}
  %head
    %meta{ :charset => "utf-8" }

    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }
    %title= content_for?(:title) ? yield(:title) : "pindus"
    %link{:href => image_path('icons/favicon.ico'), :rel => "shortcut icon"}/
    %link{:href => image_path('icons/apple-touch-icon.png'), :rel => "apple-touch-icon"}/
    %link{:href => image_path('icons/apple-touch-icon-57x57-precomposed.png'), :rel => "apple-touch-icon", :sizes => "57x57"}/
    %link{:href => image_path('icons/apple-touch-icon-72x72-precomposed.png'), :rel => "apple-touch-icon", :sizes => "72x72"}/
    %link{:href => image_path('icons/apple-touch-icon-114x114-precomposed.png'), :rel => "apple-touch-icon", :sizes => "114x114"}/
    %link{:href => image_path('icons/apple-touch-icon-144x144-precomposed.png'), :rel => "apple-touch-icon", :sizes => "144x144"}/


    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Cabin:400,500,600|Hammersmith+One|Amaranth:700,400"
    = stylesheet_link_tag "application", media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag "vendor/modernizr"    
    = javascript_include_tag "application", 'data-turbolinks-track' => true
    = csrf_meta_tag

  %body
    = render "/application/top_bar"
    .row
      .column
        = yield


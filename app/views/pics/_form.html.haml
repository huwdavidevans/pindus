= form_for @pic do |f|
  - if @pic.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pic.errors.count, "error")} prohibited this pic from being saved:"
      %ul
        - @pic.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .actions
    = f.submit 'Save'

= form_for @pic do |f|
  - if @pic.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pic.errors.count, "error")} prohibited this pic from being saved:"
      %ul
        - @pic.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :image
    =image_tag @pic.image.url(:thumb)
    = f.file_field :image

  .field
    = f.label :title
    = f.text_field :title

  .field
    = f.label :tag_list, "Tags (separated by commas)" 

    = f.hidden_field :tag_list, value: @pic.tag_list.to_s, id: 'tags-field'
    %ul#tagit-field

  .actions
    = f.submit 'Save', :class => 'button'

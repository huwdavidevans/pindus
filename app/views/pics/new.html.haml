%h1 Add a new pic

= form_for @pic do |f|
  - if @pic.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pic.errors.count, "error")} prohibited this pic from being saved:"
      %ul
        - @pic.errors.full_messages.each do |msg|
          %li= msg

  .row
    .columns.large-3
      .field
        = f.label :image
        = f.file_field :image
    .columns.large-3.actions.left
      = f.submit 'Upload', :class => 'button'


= link_to 'Back', pics_path
